<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}.%M() - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <logger name="org.mongo.Main" level="DEBUG"/>
        <logger name="org.mongodb.driver" level="WARN"/>
        <logger name="org.mongo.reader.MdbReaderExample" level="DEBUG"/>
        <logger name="org.mongo.writer.MdbWriterExample" level="INFO"/>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>